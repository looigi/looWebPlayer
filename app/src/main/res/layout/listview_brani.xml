<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="185dp"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
    android:gravity="center_horizontal"
    android:padding="2dp"
    android:weightSum="5"
    android:layout_height="185dp">

    <LinearLayout
        android:id="@+id/layBrani"
        android:layout_width="match_parent"
        android:weightSum="6"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgBrano"
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/txtNomeBrano"
            android:lines="2"
            android:textSize="15sp"
            android:textColor="@color/rosso"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bordo_arrotondato_bianco_sf_tr_sb"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_margin="2dp"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bordo_arrotondato_bianco_sfumato"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:text="Escluso"
                android:layout_height="wrap_content">

            </TextView>

            <CheckBox
                android:id="@+id/chkEsclusa"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

            </CheckBox>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>