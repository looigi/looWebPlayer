<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgLinguettaTesto"
            android:tint="@color/bianco"
            android:background="@drawable/linguetta_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/layTesto"
            android:layout_width="200dp"
            android:padding="2dp"
            android:orientation="vertical"
            android:background="@color/bianco_trasparente"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical|end"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgInglese"
                    android:layout_width="40dp"
                    android:background="@drawable/inglese"
                    android:layout_height="40dp" />

                <ImageView
                    android:id="@+id/imgItaliano"
                    android:layout_width="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/italiano"
                    android:layout_height="40dp" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/layPaginaContenitore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txTesto"
                        android:textColor="@color/nero"
                        android:shadowColor="@color/grigio"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>